<div class="card blue-grey darken-1">
  <div class="card-content white-text">
    <span class="card-title"><%= article.title %></span>
    <p>
      <%= article.text %>
    </p>
  </div>
  <div class="card-action">
    <% if user_signed_in? && current_user.id == article.user.id %>
      <%= link_to '編集', edit_article_path(article), method: :get %>
      <%= link_to '削除', article_path(article),class: "delete", method: :delete %>
    <% end %>
    <%= link_to 'コメントする', article_path(article), method: :get %>
  </div>
</div>
